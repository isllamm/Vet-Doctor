<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_body_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:text="sdsadas"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frame_fit"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/full_border_radius_12"
        app:layout_constraintStart_toStartOf="@+id/tv_body_part"
        app:layout_constraintTop_toBottomOf="@+id/tv_body_part">

        <TextView
            android:id="@+id/tv_fit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/fit"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_12ssp" />

    </FrameLayout>


    <FrameLayout
        android:id="@+id/frame_unfit"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:background="@drawable/full_border_radius_12"
        app:layout_constraintBottom_toBottomOf="@+id/frame_fit"
        app:layout_constraintStart_toEndOf="@+id/frame_fit"
        app:layout_constraintTop_toTopOf="@+id/frame_fit">

        <TextView
            android:id="@+id/tv_unfit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/unfit"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_12ssp" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>